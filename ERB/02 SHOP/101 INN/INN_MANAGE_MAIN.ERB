$INPUT_INN_MANAGE

CALL INN_MANAGE_SHOW
INPUT

;손님응대
IF RESULT == 101
    PRINTFORMW 손님응대입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;객실관리
ELSEIF RESULT == 102
    PRINTFORMW 객실관리입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;청소
ELSEIF RESULT == 103
    PRINTFORMW 청소입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;요리
ELSEIF RESULT == 104
    PRINTFORMW 요리입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;장부확인
ELSEIF RESULT == 105
    PRINTFORMW 장부확인입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;재고확인
ELSEIF RESULT == 106
    PRINTFORMW 재고확인입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;계약체결
ELSEIF RESULT == 107
    PRINTFORMW 계약체결입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;시설점검
ELSEIF RESULT == 108
    PRINTFORMW 시설점검입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;여관정보
ELSEIF RESULT == 109
    PRINTFORMW 여관정보입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;직원관리
ELSEIF RESULT == 110
    PRINTFORMW 직원관리입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE


;시설확장
ELSEIF RESULT == 111
    PRINTFORMW 시설확장입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;텃밭관리
ELSEIF RESULT == 112
    PRINTFORMW 텃밭관리입니다.
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

;루미설명방
ELSEIF RESULT == 998
    CALL LUMI_HELP_MENU
    CLEARLINE 2
    GOTO INPUT_INN_MANAGE

ELSEIF RESULT == 999
    RETURN
ELSE
    CLEARLINE 1
    GOTO INPUT_INN_MANAGE
ENDIF

RETURN

