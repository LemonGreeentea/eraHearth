	; PRINTL [4] - 특전을 확인한다

	PRINTL [0] - 돌아간다
	
	input
	
	if RESULT == 1
		CALL showMonsterBirthPedia
	elseif RESULT == 2
		CALL showMobBirthPedia
	elseif RESULT == 3
		CALL showNamedNPCBirthPedia
	elseif RESULT == 4
		; todo 특전 제작
	elseif RESULT == 0
		return 0
	else
		CALL systemError("잘못된 입력입니다")
		clearLine 2
		goto inputLoop
	endif
