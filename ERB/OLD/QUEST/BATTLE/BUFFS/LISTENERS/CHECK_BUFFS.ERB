@checkBuffs
#dim dynamic buffIdx

	for buffIdx, 1001, 2000
		if TCVAR:MASTER:buffIdx
			TCVAR:MASTER:buffIdx--
			
			CALLForm progressBuff{buffIdx}(MASTER)

			if TCVAR:MASTER:buffIdx == 0
				CALLForm offBuff{buffIdx}(MASTER)
			endif
		endif

		if TCVAR:TARGET:buffIdx
			TCVAR:TARGET:buffIdx--
			
			CALLForm progressBuff{buffIdx}(TARGET)

			if TCVAR:TARGET:buffIdx == 0
				CALLForm offBuff{buffIdx}(TARGET)
			endif
		endif
	next
