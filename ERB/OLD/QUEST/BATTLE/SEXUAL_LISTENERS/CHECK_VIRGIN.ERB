@checkVirgin
#dim dynamic partIdx

	for partIdx, 101, 200
		if isMasterInserted(partIdx, 1) && TALENT:MASTER:(200 + partIdx)
			if RAND:2 == 0
				printFormW %kr(CALLNAME:MASTER, "은", "는")% 처음으로 %kr(partStrRaw(partIdx), "으로", "로")% 하는 성교를 경험했다.
			else
				printFormW %kr(CALLNAME:MASTER, "은", "는")% %partStrRaw(partIdx)%의 처녀를 잃었다.
			endif

			CALL loseTalent(TALENTNAME:(200 + partIdx))
			
			CALL onMasterLostVirgin_m(partIdx)
			CALL onMasterLostVirgin_e(partIdx)
		endif
	next

@checkVirginParasite
#dim dynamic partIdx

	for partIdx, 101, 200
		if isParasiteInside(partIdx) && TALENT:MASTER:(200 + partIdx)
			printFormW %kr(CALLNAME:MASTER, "은", "는")% %parasiteName(partIdx)%에게 %partStrRaw(partIdx)%의 처녀를 잃었다.

			CALL loseTalent(TALENTNAME:(200 + partIdx))
			
			CALL onMasterLostVirgin_m(partIdx)
			CALL onMasterLostVirgin_e(partIdx)
		endif
	next
