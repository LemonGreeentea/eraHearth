@SYSTEM_TITLE
#DIM LCOUNT,2
RESETDATA

ALIGNMENT CENTER
[SKIPSTART]
; 여백과 배경 정리
FOR LOCAL , 0 , 10
	CLEARLINE LINECOUNT
	PRINTL
NEXT
[SKIPEND]
; 타이틀 텍스트
SETCOLOR 220, 180, 140
PRINTFORML ⨳⨳⨳  EraHearth  ⨳⨳⨳
RESETCOLOR
PRINTL
PRINTFORML "따스한 모닥불이 피어오르는 작은 여관,"
PRINTFORML "당신의 작은 영지를 이끌어보세요."
PRINTL

;CALL SYSTEM_TITLE_BANNER(0)
PRINTFORML %GAMEBASE_AUTHOR%
PRINTFORML Ver%GET_VERSION_STRING(GAMEBASE_VERSION)%
PRINTFORML %GAMEBASE_INFO%
CALL SINGLE_DRAWLINE

; 버튼 옵션
PRINTBUTTON " 0 [    처음부터    ]", 0
PRINTL 
PRINTBUTTON " 1 [    이어하기    ]", 1
PRINTL 
PRINTBUTTON " 2 [  커스텀캐릭터  ]", 2
PRINTL
PRINTBUTTON " 3 [     도움말     ]", 3
PRINTL
[IF_DEBUG]
PRINTBUTTON "99 [     DEBUG     ]", 99
PRINTL 
[ENDIF]

ALIGNMENT LEFT


$INPUT_LOOP
INPUT
IF RESULT == 0
	BEGIN FIRST
ELSEIF RESULT == 1
	LOADGAME
	RESTART
ELSEIF RESULT == 2
	CALL CUSTOM_CHARA()
	RESTART
ELSEIF RESULT == 3
	CALL HELPMENU(1)
	RESTART
ELSEIF RESULT == 99
	[IF_DEBUG]
	CALL DEBUGMENU()
	RESTART
	[ENDIF]
ENDIF
GOTO INPUT_LOOP